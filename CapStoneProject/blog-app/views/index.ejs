<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Blog Home</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
  <%- include('partials/header') %>
  <h1>All Posts</h1>
  <a href="/posts/new" class="btn">Create New Post</a>
  <% if (posts.length === 0) { %>
    <p>No posts yet. Start by creating one!</p>
  <% } else { %>
    <ul class="posts-list">
      <% posts.forEach((post, index) => { %>
        <li class="post-item">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
          <a href="/posts/<%= index %>/edit" class="btn small">Edit</a>
          <form action="/posts/<%= index %>/delete" method="post" class="inline-form">
            <button type="submit" class="btn small danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
  <%- include('partials/footer') %>
</body>
</html>

